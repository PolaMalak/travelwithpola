---
import { useTranslations, getLocalizedPath, type Lang, defaultLang } from '../i18n/translations';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
const isRTL = lang === 'ar';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/packages', key: 'nav.packages' },
  { href: '/cruises', key: 'nav.cruises' },
  { href: '/groups', key: 'nav.groups' },
  { href: '/about', key: 'nav.about' },
  { href: '/contact', key: 'nav.contact' },
];

const destinations = {
  en: ['Cairo & Giza Pyramids', 'Luxor & Valley of Kings', 'Aswan & Abu Simbel', 'Alexandria', 'Red Sea Resorts'],
  es: ['El Cairo y Pirámides de Giza', 'Luxor y Valle de los Reyes', 'Asuán y Abu Simbel', 'Alejandría', 'Resorts del Mar Rojo'],
  ar: ['القاهرة وأهرامات الجيزة', 'الأقصر ووادي الملوك', 'أسوان وأبو سمبل', 'الإسكندرية', 'منتجعات البحر الأحمر'],
};

function getHref(href: string) {
  return getLocalizedPath(href, lang);
}
---

<footer class="bg-gradient-to-b from-stone-800 to-stone-900 text-white" dir={isRTL ? 'rtl' : 'ltr'}>
  <!-- Wave Decoration -->
  <div class="relative -mt-px">
    <svg class="w-full h-16 md:h-24 fill-papyrus-50" viewBox="0 0 1440 100" preserveAspectRatio="none">
      <path d="M0,50 C360,100 720,0 1080,50 C1260,75 1380,50 1440,50 L1440,0 L0,0 Z"></path>
    </svg>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href={getHref('/')} class={`flex items-center gap-3 group mb-6 ${isRTL ? 'flex-row-reverse' : ''}`}>
          <div class="w-14 h-14 bg-gradient-to-br from-sand-400 to-sand-600 rounded-full flex items-center justify-center shadow-lg">
            <span class="text-white font-display font-bold text-2xl">P</span>
          </div>
          <div>
            <span class="text-white font-display text-2xl font-semibold">TravelWithPola</span>
            <span class={`block text-sand-400 text-sm font-accent italic ${isRTL ? 'text-right' : ''}`}>
              {lang === 'ar' ? 'اكتشف مصر' : lang === 'es' ? 'Descubre Egipto' : 'Discover Egypt'}
            </span>
          </div>
        </a>
        <p class="text-stone-400 leading-relaxed mb-6">
          {t('footer.tagline')}
        </p>
        <!-- Social Links -->
        <div class={`flex gap-4 ${isRTL ? 'flex-row-reverse justify-end' : ''}`}>
          <a href="#" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-sand-500 transition-colors" aria-label="Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/></svg>
          </a>
          <a href="#" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-sand-500 transition-colors" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12,2.16c3.2,0,3.58.01,4.85.07,3.25.15,4.77,1.69,4.92,4.92.06,1.27.07,1.65.07,4.85s-.01,3.58-.07,4.85c-.15,3.23-1.66,4.77-4.92,4.92-1.27.06-1.65.07-4.85.07s-3.58-.01-4.85-.07c-3.26-.15-4.77-1.7-4.92-4.92-.06-1.27-.07-1.65-.07-4.85s.01-3.58.07-4.85C2.38,3.92,3.9,2.38,7.15,2.23,8.42,2.17,8.8,2.16,12,2.16ZM12,0C8.74,0,8.33.01,7.05.07c-4.35.2-6.78,2.62-6.98,6.98C.01,8.33,0,8.74,0,12s.01,3.67.07,4.95c.2,4.36,2.62,6.78,6.98,6.98,1.28.06,1.69.07,4.95.07s3.67-.01,4.95-.07c4.35-.2,6.78-2.62,6.98-6.98.06-1.28.07-1.69.07-4.95s-.01-3.67-.07-4.95c-.2-4.35-2.62-6.78-6.98-6.98C15.67.01,15.26,0,12,0Zm0,5.84A6.16,6.16,0,1,0,18.16,12,6.16,6.16,0,0,0,12,5.84ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.41,4.15a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.41,4.15Z"/></svg>
          </a>
          <a href="#" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-sand-500 transition-colors" aria-label="YouTube">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.5,6.19a3.02,3.02,0,0,0-2.12-2.14C19.5,3.5,12,3.5,12,3.5s-7.5,0-9.38.55A3.02,3.02,0,0,0,.5,6.19,31.64,31.64,0,0,0,0,12a31.64,31.64,0,0,0,.5,5.81,3.02,3.02,0,0,0,2.12,2.14c1.88.55,9.38.55,9.38.55s7.5,0,9.38-.55a3.02,3.02,0,0,0,2.12-2.14A31.64,31.64,0,0,0,24,12,31.64,31.64,0,0,0,23.5,6.19ZM9.75,15.02V8.98L15.5,12Z"/></svg>
          </a>
          <a href="#" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-green-500 transition-colors" aria-label="WhatsApp">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.47,14.38l-.01-.02c-.18-.09-1.05-.52-1.21-.58-.16-.06-.28-.09-.4.09-.12.18-.46.58-.56.7-.1.12-.21.14-.39.05-.18-.09-.75-.28-1.43-.89-.53-.47-.89-1.05-1-1.23-.1-.18-.01-.28.08-.37.08-.08.18-.21.27-.32.09-.1.12-.18.18-.3.06-.12.03-.22-.02-.31-.05-.09-.4-.97-.55-1.32-.14-.35-.29-.3-.4-.31-.1-.01-.22-.01-.34-.01-.12,0-.31.05-.47.22-.16.18-.62.61-.62,1.49s.64,1.73.73,1.85c.09.12,1.24,1.97,3.05,2.68.43.17.76.27,1.02.35.43.13.82.11,1.13.07.34-.05,1.05-.43,1.2-.85.15-.42.15-.77.1-.85-.05-.07-.17-.12-.35-.21Zm-5.48,7.49h-.01a9.87,9.87,0,0,1-5.03-1.38l-.36-.21-3.74.98.99-3.65-.24-.37a9.86,9.86,0,0,1,15.32-12.39,9.86,9.86,0,0,1-6.93,16.92v.1Zm8.4-18.27A11.82,11.82,0,0,0,2.05,19.16L0,24l4.97-1.3a11.83,11.83,0,0,0,5.65,1.44h.01A11.84,11.84,0,0,0,22.46,5.67,11.75,11.75,0,0,0,20.39,3.6Z"/></svg>
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="font-display text-xl font-semibold mb-6 text-sand-400">{t('footer.quickLinks')}</h3>
        <ul class="space-y-3">
          {quickLinks.map(link => (
            <li>
              <a href={getHref(link.href)} class={`text-stone-400 hover:text-white transition-colors flex items-center group ${isRTL ? 'flex-row-reverse' : ''}`}>
                <svg class={`w-4 h-4 text-sand-500 group-hover:translate-x-1 transition-transform ${isRTL ? 'ml-2 rotate-180 group-hover:-translate-x-1' : 'mr-2'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                {t(link.key as any)}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Destinations -->
      <div>
        <h3 class="font-display text-xl font-semibold mb-6 text-sand-400">{t('footer.destinations')}</h3>
        <ul class="space-y-3">
          {destinations[lang].map(dest => (
            <li class={`text-stone-400 flex items-center ${isRTL ? 'flex-row-reverse' : ''}`}>
              <svg class={`w-4 h-4 text-nile-400 ${isRTL ? 'ml-2' : 'mr-2'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {dest}
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="font-display text-xl font-semibold mb-6 text-sand-400">{t('footer.contactUs')}</h3>
        <ul class="space-y-4">
          <li class={`flex items-start ${isRTL ? 'flex-row-reverse' : ''}`}>
            <svg class={`w-5 h-5 text-nile-400 mt-1 flex-shrink-0 ${isRTL ? 'ml-3' : 'mr-3'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-stone-400">{lang === 'ar' ? 'القاهرة، مصر' : lang === 'es' ? 'El Cairo, Egipto' : 'Cairo, Egypt'}</span>
          </li>
          <li class={`flex items-center ${isRTL ? 'flex-row-reverse' : ''}`}>
            <svg class={`w-5 h-5 text-nile-400 flex-shrink-0 ${isRTL ? 'ml-3' : 'mr-3'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:info@travelwithpola.com" class="text-stone-400 hover:text-white transition-colors">info@travelwithpola.com</a>
          </li>
          <li class={`flex items-center ${isRTL ? 'flex-row-reverse' : ''}`}>
            <svg class={`w-5 h-5 text-nile-400 flex-shrink-0 ${isRTL ? 'ml-3' : 'mr-3'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+201234567890" class="text-stone-400 hover:text-white transition-colors" dir="ltr">+20 123 456 7890</a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-stone-700">
      <div class={`flex flex-col md:flex-row justify-between items-center gap-4 ${isRTL ? 'md:flex-row-reverse' : ''}`}>
        <p class="text-stone-500 text-sm">
          © {currentYear} TravelWithPola. {t('footer.rights')}
        </p>
        <div class={`flex gap-6 text-sm ${isRTL ? 'flex-row-reverse' : ''}`}>
          <a href={getHref('/privacy')} class="text-stone-500 hover:text-white transition-colors">{t('footer.privacy')}</a>
          <a href={getHref('/terms')} class="text-stone-500 hover:text-white transition-colors">{t('footer.terms')}</a>
        </div>
      </div>
    </div>
  </div>
</footer>
