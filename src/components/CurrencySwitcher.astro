<script>
  // Currency state management
  const CURRENCY_KEY = 'travelwithpola_currency';
  const RATES_KEY = 'travelwithpola_rates';
  const RATES_TIMESTAMP_KEY = 'travelwithpola_rates_timestamp';
  const CACHE_DURATION = 60 * 60 * 1000; // 1 hour in milliseconds
  
  // Fallback rates
  const FALLBACK_RATES = {
    EGP: 1,
    USD: 0.0204,
    EUR: 0.0188,
  };
  
  interface Rates {
    EGP: number;
    USD: number;
    EUR: number;
  }
  
  function getStoredCurrency(): string {
    if (typeof localStorage !== 'undefined') {
      return localStorage.getItem(CURRENCY_KEY) || 'EGP';
    }
    return 'EGP';
  }
  
  function setStoredCurrency(currency: string): void {
    if (typeof localStorage !== 'undefined') {
      localStorage.setItem(CURRENCY_KEY, currency);
    }
  }
  
  function getCachedRates(): Rates | null {
    if (typeof localStorage !== 'undefined') {
      const timestamp = localStorage.getItem(RATES_TIMESTAMP_KEY);
      const rates = localStorage.getItem(RATES_KEY);
      
      if (timestamp && rates) {
        const age = Date.now() - parseInt(timestamp);
        if (age < CACHE_DURATION) {
          try {
            return JSON.parse(rates);
          } catch {
            return null;
          }
        }
      }
    }
    return null;
  }
  
  function setCachedRates(rates: Rates): void {
    if (typeof localStorage !== 'undefined') {
      localStorage.setItem(RATES_KEY, JSON.stringify(rates));
      localStorage.setItem(RATES_TIMESTAMP_KEY, Date.now().toString());
    }
  }
  
  async function fetchLiveRates(): Promise<Rates> {
    // Show loading state
    const loadingSpinner = document.querySelector('.currency-loading');
    const chevron = document.querySelector('.currency-chevron');
    loadingSpinner?.classList.remove('hidden');
    chevron?.classList.add('hidden');
    
    try {
      // Try primary API: exchangerate.host (free, no key required)
      const response = await fetch('https://api.exchangerate.host/latest?base=EGP&symbols=USD,EUR');
      
      if (!response.ok) throw new Error('Primary API failed');
      
      const data = await response.json();
      
      if (!data.success || !data.rates) {
        throw new Error('Invalid API response');
      }
      
      const rates: Rates = {
        EGP: 1,
        USD: data.rates.USD,
        EUR: data.rates.EUR,
      };
      
      // Update UI to show live rates
      updateRatesDisplay(rates, true);
      setCachedRates(rates);
      
      return rates;
    } catch (primaryError) {
      console.warn('Primary API failed, trying alternative...', primaryError);
      
      try {
        // Try alternative: frankfurter.app (USD to EUR only, we calculate EGP)
        const altResponse = await fetch('https://api.frankfurter.app/latest?from=USD&to=EUR,EGP');
        
        if (altResponse.ok) {
          const altData = await altResponse.json();
          
          if (altData.rates?.EGP) {
            const egpPerUsd = altData.rates.EGP;
            const egpPerEur = egpPerUsd / altData.rates.EUR;
            
            const rates: Rates = {
              EGP: 1,
              USD: 1 / egpPerUsd,
              EUR: 1 / egpPerEur,
            };
            
            updateRatesDisplay(rates, true);
            setCachedRates(rates);
            
            return rates;
          }
        }
      } catch (altError) {
        console.warn('Alternative API also failed', altError);
      }
      
      // Use cached or fallback rates
      const cached = getCachedRates();
      if (cached) {
        updateRatesDisplay(cached, false, 'Cached rates');
        return cached;
      }
      
      updateRatesDisplay(FALLBACK_RATES, false, 'Offline rates');
      return FALLBACK_RATES;
    } finally {
      loadingSpinner?.classList.add('hidden');
      chevron?.classList.remove('hidden');
    }
  }
  
  function updateRatesDisplay(rates: Rates, isLive: boolean, statusText?: string): void {
    // Update rate displays in dropdown
    const usdOption = document.querySelector('[data-currency="USD"]');
    const eurOption = document.querySelector('[data-currency="EUR"]');
    
    if (usdOption) {
      usdOption.setAttribute('data-rate', rates.USD.toString());
      const rateDisplay = document.getElementById('rate-usd');
      if (rateDisplay) {
        rateDisplay.textContent = `1 USD â‰ˆ ${Math.round(1/rates.USD)} EGP`;
      }
    }
    
    if (eurOption) {
      eurOption.setAttribute('data-rate', rates.EUR.toString());
      const rateDisplay = document.getElementById('rate-eur');
      if (rateDisplay) {
        rateDisplay.textContent = `1 EUR â‰ˆ ${Math.round(1/rates.EUR)} EGP`;
      }
    }
    
    // Update status indicator
    const indicator = document.getElementById('live-indicator');
    const label = document.getElementById('live-label');
    const status = document.getElementById('rates-status');
    const lastUpdated = document.getElementById('last-updated');
    
    if (isLive) {
      indicator?.classList.remove('bg-yellow-500', 'bg-red-500');
      indicator?.classList.add('bg-green-500');
      if (label) label.textContent = 'Live';
      if (status) status.textContent = 'Real-time exchange rates';
    } else {
      indicator?.classList.remove('bg-green-500');
      indicator?.classList.add('bg-yellow-500');
      if (label) label.textContent = statusText || 'Cached';
      if (status) status.textContent = statusText || 'Using cached rates';
    }
    
    if (lastUpdated) {
      lastUpdated.textContent = `Updated: ${new Date().toLocaleTimeString()}`;
    }
  }
  
  function updatePrices(currency: string, symbol: string, rate: number): void {
    // Update all price elements on the page
    document.querySelectorAll('[data-price-egp]').forEach(el => {
      const priceEGP = parseFloat(el.getAttribute('data-price-egp') || '0');
      const converted = Math.round(priceEGP * rate);
      const formatted = converted.toLocaleString();
      
      if (currency === 'EGP') {
        el.textContent = `EGP ${formatted}`;
      } else {
        el.textContent = `${symbol}${formatted}`;
      }
    });
    
    // Update current currency label
    const label = document.getElementById('current-currency-label');
    if (label) label.textContent = currency;
    
    // Update active state in dropdown
    document.querySelectorAll('.currency-option').forEach(opt => {
      if (opt.getAttribute('data-currency') === currency) {
        opt.classList.add('bg-nile-100', 'text-nile-700', 'font-medium');
      } else {
        opt.classList.remove('bg-nile-100', 'text-nile-700', 'font-medium');
      }
    });
  }
  
  // Initialize
  document.addEventListener('DOMContentLoaded', async () => {
    // First, check for cached rates to show immediately
    const cached = getCachedRates();
    const storedCurrency = getStoredCurrency();
    
    if (cached) {
      const option = document.querySelector(`[data-currency="${storedCurrency}"]`);
      if (option) {
        const symbol = option.getAttribute('data-symbol') || 'EGP';
        const rate = cached[storedCurrency as keyof Rates] || 1;
        updatePrices(storedCurrency, symbol, rate);
        updateRatesDisplay(cached, false, 'Loading...');
      }
    }
    
    // Then fetch live rates
    const rates = await fetchLiveRates();
    
    // Update prices with live rates
    const option = document.querySelector(`[data-currency="${storedCurrency}"]`);
    if (option) {
      const symbol = option.getAttribute('data-symbol') || 'EGP';
      const rate = rates[storedCurrency as keyof Rates] || 1;
      updatePrices(storedCurrency, symbol, rate);
    }
  });
  
  // Dropdown toggle
  const btn = document.getElementById('currency-btn');
  const dropdown = document.getElementById('currency-dropdown');
  
  btn?.addEventListener('click', () => {
    dropdown?.classList.toggle('hidden');
  });
  
  // Currency selection
  document.querySelectorAll('.currency-option').forEach(option => {
    option.addEventListener('click', () => {
      const currency = option.getAttribute('data-currency') || 'EGP';
      const symbol = option.getAttribute('data-symbol') || 'EGP';
      const rate = parseFloat(option.getAttribute('data-rate') || '1');
      
      setStoredCurrency(currency);
      updatePrices(currency, symbol, rate);
      dropdown?.classList.add('hidden');
    });
  });
  
  // Close on click outside
  document.addEventListener('click', (e) => {
    const switcher = document.getElementById('currency-switcher');
    if (!switcher?.contains(e.target as Node)) {
      dropdown?.classList.add('hidden');
    }
  });
  
  // Refresh rates periodically (every hour)
  setInterval(() => {
    fetchLiveRates().then(rates => {
      const storedCurrency = getStoredCurrency();
      const option = document.querySelector(`[data-currency="${storedCurrency}"]`);
      if (option) {
        const symbol = option.getAttribute('data-symbol') || 'EGP';
        const rate = rates[storedCurrency as keyof Rates] || 1;
        updatePrices(storedCurrency, symbol, rate);
      }
    });
  }, CACHE_DURATION);
</script>
