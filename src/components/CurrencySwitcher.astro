import type { Lang } from '../i18n/translations';

interface Props {
  currentLang: Lang;
}

const { currentLang } = Astro.props;
const names = currencyNames[currentLang];

// Labels for loading/error states
const labels = {
  en: { loading: 'Updating rates...', error: 'Rate unavailable', live: 'Live' },
  es: { loading: 'Actualizando...', error: 'No disponible', live: 'En vivo' },
