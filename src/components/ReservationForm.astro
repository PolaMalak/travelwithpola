---
interface Props {
  tripTitle: string;
  tripType: string;
}

const { tripTitle, tripType } = Astro.props;
---

<section class="py-16 bg-gradient-to-br from-nile-50 to-papyrus-100" id="book">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <span class="section-subtitle">Reserve Your Spot</span>
      <h2 class="section-title text-3xl md:text-4xl">Book This Trip</h2>
      <p class="text-stone-600 mt-4">Fill out the form below and we'll get back to you within 24 hours to confirm your reservation.</p>
    </div>
    
    <form 
      name="reservation"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      class="bg-white rounded-3xl shadow-xl p-8 md:p-10"
    >
      <input type="hidden" name="form-name" value="reservation" />
      <input type="hidden" name="trip-title" value={tripTitle} />
      <input type="hidden" name="trip-type" value={tripType} />
      
      <!-- Honeypot field -->
      <p class="hidden">
        <label>Don't fill this out: <input name="bot-field" /></label>
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Full Name -->
        <div>
          <label for="fullName" class="form-label">Full Name *</label>
          <input 
            type="text" 
            id="fullName" 
            name="fullName" 
            required
            class="form-input"
            placeholder="John Smith"
          />
        </div>
        
        <!-- Email -->
        <div>
          <label for="email" class="form-label">Email Address *</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required
            class="form-input"
            placeholder="john@example.com"
          />
        </div>
        
        <!-- Phone -->
        <div>
          <label for="phone" class="form-label">Phone Number *</label>
          <input 
            type="tel" 
            id="phone" 
            name="phone" 
            required
            class="form-input"
            placeholder="+1 234 567 8900"
          />
        </div>
        
        <!-- Country -->
        <div>
          <label for="country" class="form-label">Country *</label>
          <input 
            type="text" 
            id="country" 
            name="country" 
            required
            class="form-input"
            placeholder="United States"
          />
        </div>
        
        <!-- Preferred Date -->
        <div>
          <label for="preferredDate" class="form-label">Preferred Travel Date *</label>
          <input 
            type="date" 
            id="preferredDate" 
            name="preferredDate" 
            required
            class="form-input"
          />
        </div>
        
        <!-- Number of Travelers -->
        <div>
          <label for="travelers" class="form-label">Number of Travelers *</label>
          <select 
            id="travelers" 
            name="travelers" 
            required
            class="form-input"
          >
            <option value="">Select...</option>
            <option value="1">1 Traveler</option>
            <option value="2">2 Travelers</option>
            <option value="3">3 Travelers</option>
            <option value="4">4 Travelers</option>
            <option value="5">5 Travelers</option>
            <option value="6+">6+ Travelers</option>
          </select>
        </div>
      </div>
      
      <!-- Special Requests -->
      <div class="mt-6">
        <label for="message" class="form-label">Special Requests or Questions</label>
        <textarea 
          id="message" 
          name="message" 
          rows="4"
          class="form-input resize-none"
          placeholder="Any special requirements, dietary needs, or questions..."
        ></textarea>
      </div>
      
      <!-- Terms -->
      <div class="mt-6">
        <label class="flex items-start cursor-pointer group">
          <input 
            type="checkbox" 
            name="terms" 
            required
            class="mt-1 w-5 h-5 text-nile-600 border-stone-300 rounded focus:ring-nile-500"
          />
          <span class="ml-3 text-sm text-stone-600 group-hover:text-stone-800 transition-colors">
            I agree to the <a href="/terms" class="text-nile-600 hover:underline">Terms of Service</a> and <a href="/privacy" class="text-nile-600 hover:underline">Privacy Policy</a>. I understand that TravelWithPola will contact me to confirm the reservation.
          </span>
        </label>
      </div>
      
      <!-- Submit Button -->
      <div class="mt-8">
        <button 
          type="submit"
          class="w-full btn-gold py-4 text-lg font-semibold"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Request Reservation
        </button>
      </div>
      
      <p class="text-center text-stone-500 text-sm mt-4">
        âœ“ Free cancellation up to 30 days before departure
      </p>
    </form>
  </div>
</section>

