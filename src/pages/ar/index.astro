---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TripCard from '../../components/TripCard.astro';
import Price from '../../components/Price.astro';
import { getCollection } from 'astro:content';
import { useTranslations, type Lang } from '../../i18n/translations';

const lang: Lang = 'ar';
const t = useTranslations(lang);
const isRTL = true;

const packages = await getCollection('packages');
const cruises = await getCollection('cruises');
const groups = await getCollection('groups');

const featuredPackages = packages.filter(p => p.data.featured).sort((a, b) => a.data.order - b.data.order).slice(0, 3);
const featuredCruise = cruises.find(c => c.data.featured);
const featuredGroup = groups.find(g => g.data.featured);

const stats = [
  { number: '+15', label: t('stats.years') },
  { number: '+10,000', label: t('stats.travelers') },
  { number: '+50', label: t('stats.tours') },
  { number: '4.9', label: t('stats.rating') },
];

const basePath = '/ar';

const whyChooseUs = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
    title: t('why.licensed'),
    description: t('why.licensedDesc'),
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>`,
    title: t('why.experts'),
    description: t('why.expertsDesc'),
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`,
    title: t('why.smallGroups'),
    description: t('why.smallGroupsDesc'),
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    title: t('why.value'),
    description: t('why.valueDesc'),
  },
];
---

<BaseLayout 
  title="الرئيسية" 
  description="اكتشف عجائب مصر الخالدة مع TravelWithPola. جولات بإرشاد خبراء، رحلات نيلية، ومغامرات لا تُنسى عبر المعابد القديمة والأهرامات."
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden" dir="rtl">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-stone-900/60 via-stone-900/40 to-stone-900/80 z-10"></div>
      <img src="/images/hero-pyramids.svg" alt="أهرامات الجيزة عند غروب الشمس" class="w-full h-full object-cover" loading="eager" fetchpriority="high" />
    </div>
    <div class="absolute inset-0 z-10 opacity-10" style="background-image: url('/images/pattern.svg'); background-size: 200px;"></div>
    <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center pt-20">
      <div class="animate-fade-in">
        <span class="inline-block font-accent text-sand-300 text-xl md:text-2xl mb-4">{t('hero.welcome')}</span>
        <h1 class="font-display text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-6 text-shadow-lg">TravelWithPola</h1>
        <p class="text-xl md:text-2xl text-stone-200 max-w-3xl mx-auto mb-8 leading-relaxed">{t('hero.tagline')}</p>
        <div class="flex flex-col sm:flex-row-reverse gap-4 justify-center items-center">
          <a href={`${basePath}/packages`} class="btn-gold text-lg flex-row-reverse">
            {t('hero.explorePackages')}
            <svg class="w-5 h-5 mr-2 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
          </a>
          <a href={`${basePath}/contact`} class="btn-secondary text-lg">{t('hero.planTrip')}</a>
        </div>
      </div>
      <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce"><svg class="w-8 h-8 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" /></svg></div>
    </div>
  </section>
  
  <!-- Stats Bar -->
  <section class="bg-gradient-to-r from-nile-700 via-nile-600 to-nile-700 py-8" dir="rtl">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map(stat => (<div class="text-center"><div class="font-display text-3xl md:text-4xl font-bold text-white mb-1">{stat.number}</div><div class="text-nile-200 text-sm md:text-base">{stat.label}</div></div>))}
      </div>
    </div>
  </section>
  
  <!-- Featured Packages -->
  <section class="py-20 bg-papyrus-50" dir="rtl">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-on-scroll">
        <span class="section-subtitle">{t('section.chooseAdventure')}</span>
        <h2 class="section-title">{t('section.featuredPackages')}</h2>
        <p class="text-stone-600 max-w-2xl mx-auto">{t('section.featuredDesc')}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredPackages.map((pkg, i) => (<div class="animate-on-scroll" style={`animation-delay: ${i * 150}ms`}><TripCard title={pkg.data.title} description={pkg.data.description} duration={pkg.data.duration} nights={pkg.data.nights} price={pkg.data.price} currency={pkg.data.currency} image={pkg.data.image} slug={pkg.slug} type="packages" featured={pkg.data.featured} lang={lang} /></div>))}
      </div>
      <div class="text-center mt-12"><a href={`${basePath}/packages`} class="btn-primary flex-row-reverse">{t('section.viewAll')}<svg class="w-5 h-5 mr-2 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg></a></div>
    </div>
  </section>
  
  <!-- Nile Cruise -->
  {featuredCruise && (
    <section class="py-20 bg-gradient-to-br from-nile-900 via-nile-800 to-stone-900 relative overflow-hidden" dir="rtl">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/images/pattern.svg'); background-size: 150px;"></div>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="animate-on-scroll lg:col-start-2">
            <span class="font-accent text-sand-400 text-xl mb-2 block">{t('section.sailLegend')}</span>
            <h2 class="font-display text-4xl md:text-5xl font-bold text-white mb-6">{t('section.cruiseNile')}</h2>
            <p class="text-stone-300 text-lg mb-6 leading-relaxed">{t('section.cruiseDesc')}</p>
            <div class="flex flex-row-reverse items-center gap-6">
              <a href={`${basePath}/cruises`} class="btn-gold">{t('section.exploreCruises')}</a>
              <div class="text-white text-right"><span class="text-stone-400 text-sm block">{t('section.startingFrom')}</span><span class="font-display text-2xl font-bold"><Price amount={featuredCruise.data.price} /></span></div>
            </div>
          </div>
          <div class="animate-on-scroll lg:col-start-1 lg:row-start-1" style="animation-delay: 200ms">
            <div class="relative"><img src={featuredCruise.data.image} alt="رحلة نيلية" class="rounded-2xl shadow-2xl" loading="lazy" /><div class="absolute -bottom-6 -left-6 bg-sand-500 text-white px-6 py-4 rounded-xl shadow-lg"><div class="font-display text-2xl font-bold">{featuredCruise.data.nights} {t('trip.nights')}</div><div class="text-sand-100 text-sm">{t('section.allInclusive')}</div></div></div>
          </div>
        </div>
      </div>
    </section>
  )}
  
  <!-- Why Choose Us -->
  <section class="py-20 bg-white" dir="rtl">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-on-scroll"><span class="section-subtitle">{t('section.difference')}</span><h2 class="section-title">{t('section.whyChooseUs')}</h2></div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {whyChooseUs.map((item, i) => (<div class="text-center animate-on-scroll" style={`animation-delay: ${i * 100}ms`}><div class="w-16 h-16 bg-gradient-to-br from-nile-100 to-nile-200 rounded-2xl flex items-center justify-center mx-auto mb-5 text-nile-600"><Fragment set:html={item.icon} /></div><h3 class="font-display text-xl font-semibold text-stone-800 mb-3">{item.title}</h3><p class="text-stone-600">{item.description}</p></div>))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-20 bg-gradient-to-r from-sand-500 via-sand-600 to-sand-500 relative overflow-hidden" dir="rtl">
    <div class="absolute inset-0 opacity-10" style="background-image: url('/images/pattern.svg'); background-size: 100px;"></div>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 text-shadow">{t('section.readyDiscover')}</h2>
      <p class="text-white/90 text-lg md:text-xl mb-8 max-w-2xl mx-auto">{t('section.ctaDesc')}</p>
      <div class="flex flex-col sm:flex-row-reverse gap-4 justify-center">
        <a href={`${basePath}/contact`} class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-sand-600 bg-white rounded-full hover:bg-stone-100 transition-all duration-300 shadow-lg hover:shadow-xl">{t('section.contactUs')}</a>
        <a href="https://wa.me/201234567890" target="_blank" rel="noopener" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-green-600 rounded-full hover:bg-green-700 transition-all duration-300 shadow-lg">{t('section.whatsappUs')}</a>
      </div>
    </div>
  </section>
</BaseLayout>

