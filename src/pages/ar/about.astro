---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations, type Lang } from '../../i18n/translations';

const lang: Lang = 'ar';
const t = useTranslations(lang);

const team = [
  {
    name: 'بولا',
    role: 'المؤسسة والمرشدة الرئيسية',
    image: '/images/team/pola.svg',
    bio: 'بأكثر من 20 عامًا من الخبرة، أسست بولا TravelWithPola لمشاركة شغفها بمصر مع المسافرين من جميع أنحاء العالم.',
  },
  {
    name: 'د. أحمد حسن',
    role: 'عالم مصريات كبير',
    image: '/images/team/ahmed.svg',
    bio: 'دكتوراه في علم المصريات من جامعة القاهرة، يضيف أحمد عمقًا أكاديميًا وحماسًا معديًا لكل جولة.',
  },
  {
    name: 'فاطمة السعيد',
    role: 'مديرة العمليات',
    image: '/images/team/fatima.svg',
    bio: 'تضمن فاطمة أن كل تفاصيل رحلتك تسير بسلاسة، من الاستقبال في المطار إلى الوداع الأخير.',
  },
];
---

<BaseLayout 
  title={t('about.title')}
  description="تعرف على TravelWithPola - خبراء السفر الموثوق بهم في مصر مع أكثر من 15 عامًا من الخبرة في إنشاء رحلات لا تُنسى."
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-nile-900/90 via-nile-800/80 to-papyrus-50 z-10"></div>
      <img src="/images/about-hero.svg" alt="معبد مصري عند غروب الشمس" class="w-full h-full object-cover" loading="eager" />
    </div>
    <div class="relative z-20 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <span class="font-accent text-sand-300 text-xl italic mb-4 block">{t('about.subtitle')}</span>
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 text-shadow-lg">{t('about.title')}</h1>
      <p class="text-xl text-stone-200 max-w-2xl mx-auto">{t('about.sharing')}</p>
    </div>
  </section>
  
  <!-- Our Story -->
  <section class="py-20 bg-papyrus-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="animate-on-scroll lg:order-2">
          <span class="section-subtitle">{t('about.journeyBegins')}</span>
          <h2 class="section-title text-3xl md:text-4xl">{t('about.ourStory')}</h2>
          <div class="prose prose-lg text-stone-600 space-y-4">
            <p>{t('about.storyP1')}</p>
            <p>{t('about.storyP2')}</p>
            <p>{t('about.storyP3')}</p>
          </div>
        </div>
        <div class="animate-on-scroll lg:order-1" style="animation-delay: 200ms">
          <div class="grid grid-cols-2 gap-4">
            <img src="/images/about-1.svg" alt="مجموعة عند الأهرامات" class="rounded-2xl shadow-lg" loading="lazy" />
            <img src="/images/about-2.svg" alt="رحلة نيلية" class="rounded-2xl shadow-lg mt-8" loading="lazy" />
            <img src="/images/about-3.svg" alt="زيارة المعبد" class="rounded-2xl shadow-lg" loading="lazy" />
            <img src="/images/about-4.svg" alt="تجربة محلية" class="rounded-2xl shadow-lg mt-8" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Our Values -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-on-scroll">
        <span class="section-subtitle">{t('about.valuesSubtitle')}</span>
        <h2 class="section-title">{t('about.values')}</h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center p-8 bg-papyrus-50 rounded-2xl animate-on-scroll">
          <div class="w-16 h-16 bg-gradient-to-br from-nile-500 to-nile-600 rounded-2xl flex items-center justify-center mx-auto mb-5 text-white shadow-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
          </div>
          <h3 class="font-display text-2xl font-semibold text-stone-800 mb-4">{t('about.authenticity')}</h3>
          <p class="text-stone-600">{t('about.authenticityDesc')}</p>
        </div>
        <div class="text-center p-8 bg-papyrus-50 rounded-2xl animate-on-scroll" style="animation-delay: 100ms">
          <div class="w-16 h-16 bg-gradient-to-br from-nile-500 to-nile-600 rounded-2xl flex items-center justify-center mx-auto mb-5 text-white shadow-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>
          </div>
          <h3 class="font-display text-2xl font-semibold text-stone-800 mb-4">{t('about.excellence')}</h3>
          <p class="text-stone-600">{t('about.excellenceDesc')}</p>
        </div>
        <div class="text-center p-8 bg-papyrus-50 rounded-2xl animate-on-scroll" style="animation-delay: 200ms">
          <div class="w-16 h-16 bg-gradient-to-br from-nile-500 to-nile-600 rounded-2xl flex items-center justify-center mx-auto mb-5 text-white shadow-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          </div>
          <h3 class="font-display text-2xl font-semibold text-stone-800 mb-4">{t('about.sustainability')}</h3>
          <p class="text-stone-600">{t('about.sustainabilityDesc')}</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Meet the Team -->
  <section class="py-20 bg-gradient-to-br from-papyrus-100 to-papyrus-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-on-scroll">
        <span class="section-subtitle">{t('about.teamSubtitle')}</span>
        <h2 class="section-title">{t('about.team')}</h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {team.map((member, i) => (
          <div class="bg-white rounded-2xl overflow-hidden shadow-lg animate-on-scroll" style={`animation-delay: ${i * 150}ms`}>
            <div class="aspect-square bg-stone-200">
              <img src={member.image} alt={member.name} class="w-full h-full object-cover" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="font-display text-xl font-semibold text-stone-800 mb-1">{member.name}</h3>
              <p class="text-nile-600 font-accent italic mb-3">{member.role}</p>
              <p class="text-stone-600 text-sm">{member.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-20 bg-gradient-to-r from-nile-700 to-nile-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-white mb-6">{t('about.readyExplore')}</h2>
      <p class="text-nile-200 text-lg mb-8">{t('about.letsStart')}</p>
      <a href="/ar/contact" class="btn-gold text-lg">{t('about.getInTouch')}</a>
    </div>
  </section>
</BaseLayout>

