---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TripCard from '../../components/TripCard.astro';
import Price from '../../components/Price.astro';
import { getCollection } from 'astro:content';
import { useTranslations, type Lang, defaultLang } from '../../i18n/translations';

const lang: Lang = defaultLang;
const t = useTranslations(lang);

const allGroups = await getCollection('groups');
const groups = allGroups.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout 
  title={t('groups.title')}
  description="Join our intimate small group tours with a maximum of 12 travelers. Make new friends while exploring Egypt with expert Egyptologist guides."
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-nile-900/90 via-nile-800/80 to-papyrus-50 z-10"></div>
      <img 
        src="/images/groups-hero.svg" 
        alt="Small group tour"
        class="w-full h-full object-cover"
        loading="eager"
      />
    </div>
    
    <div class="relative z-20 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <span class="font-accent text-sand-300 text-xl italic mb-4 block">{t('groups.subtitle')}</span>
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 text-shadow-lg">
        {t('groups.title')}
      </h1>
      <p class="text-xl text-stone-200 max-w-2xl mx-auto">
        {t('groups.description')}
      </p>
    </div>
  </section>
  
  <!-- Benefits -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center animate-on-scroll">
          <div class="w-16 h-16 bg-gradient-to-br from-sand-400 to-sand-500 rounded-2xl flex items-center justify-center mx-auto mb-4 text-white text-2xl font-display font-bold shadow-lg">
            12
          </div>
          <h3 class="font-display font-semibold text-stone-800 mb-2">{t('groups.maxTravelers')}</h3>
          <p class="text-stone-600 text-sm">{t('groups.maxDesc')}</p>
        </div>
        <div class="text-center animate-on-scroll" style="animation-delay: 100ms">
          <div class="w-16 h-16 bg-gradient-to-br from-nile-500 to-nile-600 rounded-2xl flex items-center justify-center mx-auto mb-4 text-white shadow-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-stone-800 mb-2">{t('groups.newFriends')}</h3>
          <p class="text-stone-600 text-sm">{t('groups.newFriendsDesc')}</p>
        </div>
        <div class="text-center animate-on-scroll" style="animation-delay: 200ms">
          <div class="w-16 h-16 bg-gradient-to-br from-nile-500 to-nile-600 rounded-2xl flex items-center justify-center mx-auto mb-4 text-white shadow-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-stone-800 mb-2">{t('groups.expertLeaders')}</h3>
          <p class="text-stone-600 text-sm">{t('groups.expertDesc')}</p>
        </div>
        <div class="text-center animate-on-scroll" style="animation-delay: 300ms">
          <div class="w-16 h-16 bg-gradient-to-br from-nile-500 to-nile-600 rounded-2xl flex items-center justify-center mx-auto mb-4 text-white shadow-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-stone-800 mb-2">{t('groups.greatValue')}</h3>
          <p class="text-stone-600 text-sm">{t('groups.valueDesc')}</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Tours Grid -->
  <section class="py-20 bg-papyrus-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 animate-on-scroll">
        <span class="section-subtitle">{t('groups.joinAdventure')}</span>
        <h2 class="section-title">{t('groups.upcoming')}</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {groups.map((group, i) => (
          <div class="animate-on-scroll" style={`animation-delay: ${i * 150}ms`}>
            <article class="card group">
              <div class="relative overflow-hidden aspect-[4/3]">
                <img 
                  src={group.data.image} 
                  alt={group.data.title}
                  loading="lazy"
                  decoding="async"
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-stone-900/80 via-transparent to-transparent"></div>
                
                <div class="absolute top-4 right-4 flex gap-2">
                  <span class="bg-white/90 backdrop-blur-sm text-stone-800 px-3 py-1.5 rounded-full text-sm font-medium">
                    {t('trip.maxGuests').replace('{count}', String(group.data.maxGroupSize))}
                  </span>
                </div>
                
                <div class="absolute bottom-4 left-4 right-4">
                  <h3 class="font-display text-xl md:text-2xl font-bold text-white text-shadow mb-1 line-clamp-2">
                    {group.data.title}
                  </h3>
                  <p class="text-sand-300 text-sm font-accent flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {group.data.duration}
                  </p>
                </div>
              </div>
              
              <div class="p-6">
                <p class="text-stone-600 line-clamp-2 mb-4">
                  {group.data.description}
                </p>
                
                {group.data.nextDepartures && group.data.nextDepartures.length > 0 && (
                  <div class="mb-4 p-3 bg-nile-50 rounded-lg">
                    <div class="text-sm font-medium text-nile-800 mb-1">{t('groups.nextDepartures')}</div>
                    <div class="flex flex-wrap gap-2">
                      {group.data.nextDepartures.slice(0, 3).map(date => (
                        <span class="text-xs bg-white px-2 py-1 rounded text-nile-600">{date}</span>
                      ))}
                    </div>
                  </div>
                )}
                
                <div class="flex items-center justify-between">
                  <div>
                    <span class="text-stone-500 text-sm">{t('trip.from')}</span>
                    <Price amount={group.data.price} class="text-2xl font-display font-bold text-nile-600" />
                    <span class="text-stone-500 text-xs">{t('trip.perPerson')}</span>
                  </div>
                  
                  <a 
                    href={`/groups/${group.slug}`}
                    class="btn-primary py-3 px-6 text-sm"
                  >
                    {t('trip.viewDetails')}
                  </a>
                </div>
              </div>
            </article>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Testimonial -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <svg class="w-12 h-12 text-sand-400 mx-auto mb-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
      </svg>
      <blockquote class="font-display text-2xl md:text-3xl text-stone-800 italic mb-6">
        "The small group format was perfect. We made lifelong friends from Australia, Canada, and Germany while exploring the most incredible sites. Our guide Ahmed was phenomenal!"
      </blockquote>
      <cite class="text-stone-600 not-italic">
        <span class="font-semibold">Sarah M.</span> â€” United States, October 2024
      </cite>
    </div>
  </section>
</BaseLayout>
