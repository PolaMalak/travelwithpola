---
import BaseLayout from '../layouts/BaseLayout.astro';

const team = [
  {
    name: 'Pola',
    role: 'Founder & Lead Guide',
    image: '/images/team/pola.svg',
    bio: 'With over 20 years of experience, Pola founded TravelWithPola to share her passion for Egypt with travelers from around the world.',
  },
  {
    name: 'Dr. Ahmed Hassan',
    role: 'Senior Egyptologist',
    image: '/images/team/ahmed.svg',
    bio: 'PhD in Egyptology from Cairo University, Ahmed brings academic depth and infectious enthusiasm to every tour.',
  },
  {
    name: 'Fatima El-Said',
    role: 'Operations Manager',
    image: '/images/team/fatima.svg',
    bio: 'Fatima ensures every detail of your trip runs smoothly, from airport pickup to final farewell.',
  },
];

const values = [
  {
    title: 'Authenticity',
    description: 'We provide genuine Egyptian experiences, not tourist traps. Meet real people, eat real food, and discover hidden gems.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>`,
  },
  {
    title: 'Excellence',
    description: 'From 5-star accommodations to expert guides, we never compromise on quality. Your comfort and satisfaction are our priority.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>`,
  },
  {
    title: 'Sustainability',
    description: 'We support local communities, respect cultural heritage, and minimize environmental impact on every tour.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
];
---

<BaseLayout 
  title="About Us" 
  description="Learn about TravelWithPola - your trusted Egypt travel experts with over 15 years of experience creating unforgettable journeys through ancient wonders."
>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-nile-900/90 via-nile-800/80 to-papyrus-50 z-10"></div>
      <img 
        src="/images/about-hero.svg" 
        alt="Egyptian temple at sunset"
        class="w-full h-full object-cover"
        loading="eager"
      />
    </div>
    
    <div class="relative z-20 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <span class="font-accent text-sand-300 text-xl italic mb-4 block">Our Story</span>
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 text-shadow-lg">
        About TravelWithPola
      </h1>
      <p class="text-xl text-stone-200 max-w-2xl mx-auto">
        Sharing the magic of Egypt with travelers from around the world since 2009
      </p>
    </div>
  </section>
  
  <!-- Our Story -->
  <section class="py-20 bg-papyrus-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="animate-on-scroll">
          <span class="section-subtitle">The Journey Begins</span>
          <h2 class="section-title text-3xl md:text-4xl">Our Story</h2>
          <div class="prose prose-lg text-stone-600 space-y-4">
            <p>
              TravelWithPola was born from a simple belief: that everyone deserves to experience the magic of Egypt with the same wonder and excitement that captivated ancient travelers thousands of years ago.
            </p>
            <p>
              Founded in 2009 by Pola, a passionate Egyptologist and lifelong Cairo resident, our company started as a small operation running personalized tours for friends and family of visiting academics. Word spread quickly about our unique approach—combining deep historical knowledge with genuine hospitality.
            </p>
            <p>
              Today, we've grown to serve thousands of travelers each year, but we've never lost sight of what makes us special: small groups, expert guides, and an unwavering commitment to authenticity. When you travel with Pola, you're not just a tourist—you're family.
            </p>
          </div>
        </div>
        
        <div class="animate-on-scroll" style="animation-delay: 200ms">
          <div class="grid grid-cols-2 gap-4">
            <img src="/images/about-1.svg" alt="Group at pyramids" class="rounded-2xl shadow-lg" loading="lazy" />
            <img src="/images/about-2.svg" alt="Nile cruise" class="rounded-2xl shadow-lg mt-8" loading="lazy" />
            <img src="/images/about-3.svg" alt="Temple visit" class="rounded-2xl shadow-lg" loading="lazy" />
            <img src="/images/about-4.svg" alt="Local experience" class="rounded-2xl shadow-lg mt-8" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Our Values -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-on-scroll">
        <span class="section-subtitle">What We Stand For</span>
        <h2 class="section-title">Our Values</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {values.map((value, i) => (
          <div class="text-center p-8 bg-papyrus-50 rounded-2xl animate-on-scroll" style={`animation-delay: ${i * 100}ms`}>
            <div class="w-16 h-16 bg-gradient-to-br from-nile-500 to-nile-600 rounded-2xl flex items-center justify-center mx-auto mb-5 text-white shadow-lg">
              <Fragment set:html={value.icon} />
            </div>
            <h3 class="font-display text-2xl font-semibold text-stone-800 mb-4">{value.title}</h3>
            <p class="text-stone-600">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Meet the Team -->
  <section class="py-20 bg-gradient-to-br from-papyrus-100 to-papyrus-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-on-scroll">
        <span class="section-subtitle">The People Behind the Magic</span>
        <h2 class="section-title">Meet Our Team</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {team.map((member, i) => (
          <div class="bg-white rounded-2xl overflow-hidden shadow-lg animate-on-scroll" style={`animation-delay: ${i * 150}ms`}>
            <div class="aspect-square bg-stone-200">
              <img 
                src={member.image} 
                alt={member.name}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="p-6 text-center">
              <h3 class="font-display text-xl font-semibold text-stone-800 mb-1">{member.name}</h3>
              <p class="text-nile-600 font-accent italic mb-3">{member.role}</p>
              <p class="text-stone-600 text-sm">{member.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Certifications -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-display text-2xl font-semibold text-stone-800">Licensed & Certified</h2>
        <p class="text-stone-600 mt-2">Recognized by leading travel organizations</p>
      </div>
      
      <div class="flex flex-wrap justify-center items-center gap-12 opacity-70">
        <div class="text-center">
          <div class="w-20 h-20 bg-stone-100 rounded-full flex items-center justify-center mx-auto mb-2">
            <span class="font-display font-bold text-stone-400">ETAA</span>
          </div>
          <span class="text-sm text-stone-500">Egyptian Travel Agents</span>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-stone-100 rounded-full flex items-center justify-center mx-auto mb-2">
            <span class="font-display font-bold text-stone-400">IATA</span>
          </div>
          <span class="text-sm text-stone-500">IATA Accredited</span>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-stone-100 rounded-full flex items-center justify-center mx-auto mb-2">
            <span class="font-display font-bold text-stone-400">MOT</span>
          </div>
          <span class="text-sm text-stone-500">Ministry of Tourism</span>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-20 bg-gradient-to-r from-nile-700 to-nile-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Explore Egypt with Us?
      </h2>
      <p class="text-nile-200 text-lg mb-8">
        Let's start planning your unforgettable Egyptian adventure together.
      </p>
      <a href="/contact" class="btn-gold text-lg">
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>

